{
	"$schema": "https://biomejs.dev/schemas/latest/schema.json",
	"files": {
		"ignoreUnknown": true,
		"includes": ["**", "!node_modules", "!dist"]
	},
	"formatter": {
		"enabled": true,
		"useEditorconfig": true
	},
	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	},
	"linter": {
		"enabled": true
	}
}
